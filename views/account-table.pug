table.table
  thead
    tr
      th First Name
      th Last Name
      th User ID
      th Action
  tbody
    each s in students
      tr
        td #{s.fname}
        td #{s.lname}
        td #{s.id}
        td
          button.btn.btn-default(id='edit-' + s.id type='button' aria-label='Edit')
            span.glyphicon.glyphicon-pencil(aria-hidden='true')
          button.btn.btn-default(id='delete-' + s.id type='button' aria-label='Delete')
            span.glyphicon.glyphicon-remove(aria-hidden='true')
