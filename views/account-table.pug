.row
  .col.s12
    .card.center
      .card-content
        h5.card-title Manage Accounts
        h6 Add, modify or delete students' accounts.
      .card-action
        table.bordered
          thead
            tr
              th First Name
              th Last Name
              th User ID
              th Email
              th Action
          tbody
            each s in students
              tr
                td #{s.fname}
                td #{s.lname}
                td #{s.id}
                td #{s.email}
                td
                  button.btn.btn-default.edit-button(id='edit-' + s.id type='button' aria-label='Edit')
                    span.glyphicon.glyphicon-pencil(aria-hidden='true')
                  button.btn.btn-default.delete-button(id='delete-' + s.id type='button' aria-label='Delete')
                    span.glyphicon.glyphicon-remove(aria-hidden='true')
