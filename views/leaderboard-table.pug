table.table
  thead
    tr
      th Rank
      th User ID
      th Points
      th Level
      th Attempts
      th Correct Answers
      th Success Rate
  tbody
    - var i = 0, last = -1;
    each s, index in students
      tr
        if s.points != last
          - last = s.points
          - i = index + 1;
        td #{i}
        td #{s.id}
        td #{s.points}
        td #{s.level}
        td #{s.attempted}
        td #{s.answered}
        if s.attempted == 0
          td N/A
        else
          td #{((s.answered / s.attempted) * 100).toFixed(2)}%
