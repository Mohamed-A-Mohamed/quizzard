extends layout

block styles
  link(rel='stylesheet' href='/css/admin.css')
  link(rel='stylesheet' href='/css/sidebar.css')

block title
  title Quizzard - Admin

block content
  include navbar
  // Account Management modal
  .modal.fade#modal-accounts(tabindex='-1' role='dialog' aria-labelledby='modal-accounts-label'
                             aria-hidden='true')
    .modal-dialog.modal-lg
      .modal-content
        .modal-header
          button.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
          h4.modal-title#modal-accounts-label Manage Accounts
        .modal-body#account-table
        .modal-footer
          button.btn.btn-primary#create-user(type='button') Create new user

  // Account Creation modal
  .modal.fade#modal-createuser(tabindex='-1' role='dialog' aria-labelledby='modal-createuser-label'
                               aria-hidden='true')
    .modal-dialog.modal-lg
      .modal-content
        .modal-header
          button.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
          h4.modal-title#modal-createuser-label Create User
        .modal-body
          form.form-user#userform
            p#result
            label.sr-only(for='userid') Username
            input.form-control#userid(type='text' name='id' placeholder='Username'
                                    required autofocus)
            label.sr-only(for='passwd') Password
            input.form-control#passwd(type='password' name='password'
                                      placeholder='Password' required)
            label.sr-only(for='fname') First Name
            input.form-control#fname(type='text' name='fname' placeholder='First Name'
                                      required)
            label.sr-only(for='lname') Last Name
            input.form-control#lname(type='text' name='lname' placeholder='Last Name'
                                      required)
            label.sr-only(for='email') Email
            input.form-control#email(type='email' name='email' placeholder='Email'
                                      required)
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Create

  .container
    .row
      .col-md-8
        .list-group
          a.list-group-item#option-accounts(href='#')
            h4.list-group-item-heading Manage Accounts
            p.list-group-item-text Add, modify or delete students' accounts.
          a.list-group-item#option-questions(href='#')
            h4.list-group-item-heading Manage Questions
            p.list-group-item-text Add, modify or delete questions.
          a.list-group-item#option-stats(href='#')
            h4.list-group-item-heading View Statistics
            p.list-group-item-text Examine information about application usage.
          a.list-group-item#option-settings(href='#')
            h4.list-group-item-heading Global Settings
            p.list-group-item-text Change application settings.
      .sidebar.col-md-4
        h4.sidebar-item#name #{user.fname} #{user.lname}
        p.sidebar-item
          | This is the administration page. You can add and modify accounts
          | and questions, or check how students are performing.

block scripts
  script(src='/lib/jquery/jquery-3.1.1.min.js')
  script(src='/lib/bootstrap/js/bootstrap.min.js')
  script(src='/js/admin.js')
  script(src='/js/navbar.js')
