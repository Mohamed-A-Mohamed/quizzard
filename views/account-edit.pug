.row
  .col.s12
    .card.center
      .card-content
        h5.card-title Account Edit
        h6 Modify and update #{user.id}'s information.
      .card-action
        form.form-edit#account-edit-form
          .form-group.row
            label.col-sm-2.col-form-label(for='userid') Username
            .col-sm-10
              input.form-control#userid(type='text' name='id' placeholder=user.id autofocus)

          .form-group
            .row
              label.col-sm-2.col-form-label(for='fname') First Name
              .col-sm-10
                input.form-control#fname(type='text' name='fname' placeholder=user.fname)
            .row
              label.col-sm-2.col-form-label(for='lname') Last Name
              .col-sm-10
                input.form-control#lname(type='text' name='lname' placeholder=user.lname)

          .form-group.row
            label.col-sm-2.col-form-label(for='email') Email
            .col-sm-10
              input.form-control#email(type='email' name='email' placeholder=user.email)

          .form-group.row
            label.col-sm-2.col-form-label(for='points') Points
            .col-sm-10
              input.form-control#email(type='number' name='points' placeholder=user.points)

          .form-group.row
            label.col-sm-2.col-form-label(for='passwd') Password
            .col-sm-10
              input.form-control#passwd(type='text' name='password' placeholder='New password')

          button.btn.btn-lg.btn-primary.btn-block(type='submit') Edit
