form.form-user#questionform
  p#result
  label.sr-only(for='qtitle') Title
  input.form-control#qtitle(type='text' name='title' placeholder='Title'
                            required autofocus)
  label.sr-only(for='qtext') Question
  input.form-control#qtext(type='text' name='text' placeholder='Question'
                            required autofocus)
  label.sr-only(for='qanswer') Answer (regex)
  input.form-control#qanswer(type='text' name='answer' placeholder='Answer (regex)'
                             required)
  label.sr-only(for='qtopic') Topic
  input.form-control#qtopic(type='text' name='topic' placeholder='Topic'
                            required)
  label.sr-only(for='qpoints') Points
  input.form-control#qpoints(type='number' name='basePoints'
                             placeholder='Base Points' required)
  button(class='btn btn-lg btn-primary btn-block' type='submit') Create
